@{
    Layout = null;
}
@model PrisustvnoNaNastaviPrikazVM
Ime studenta 
@Model.ImeStudenta

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Predmet</th>
        <th>Datum</th>
        <th>Prisutan</th>
        <th>Komentar</th>
        <th>Akcija</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var x in Model.Zapisi)
    {
        <tr>
            <td>@x.Predmet</td>
            <td>@x.Datum</td>
            <td>@(x.IsPrisutan?"DA":"NE")</td>
            <td>@x.Komentar</td>
            <td>
                <button onclick="PrisutvoNaNastaviUredi(@x.PrisustvoNaNastaviID)" class="btn btn-warning">Uredi</button>

            </td>
        </tr>
    }
    </tbody>
</table>

